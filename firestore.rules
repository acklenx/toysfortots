rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTION FOR AUTHORIZATION ---
    function isAuthorizedVolunteer() {
      return request.auth.token.firebase.sign_in_provider == 'google.com'
             && exists(/databases/$(database)/documents/artifacts/toysfortots-eae4d/private/01/data/01/authorizedVolunteers/$(request.auth.uid));
    }

    // --- Public Data ---
    match /artifacts/toysfortots-eae4d/public/01/data/01 {

      // *** RESTORED SECURITY ***
      // Allow ANY authenticated user (including anonymous) to 'get' OR 'list'
      match /locations/{boxId} {
        allow get, list: if request.auth != null; // <--- CHANGED BACK
        allow create, update, delete: if false;
      }

      // --- TOTSREPORTS RULE ---
      // *** RESTORED SECURITY ***
      match /totsReports/{reportId} {
        allow create: if request.auth != null;
        allow list, get, update: if isAuthorizedVolunteer(); // <--- CHANGED BACK
        allow delete: if false;
      }
    }

    // --- Private Data ---
    match /artifacts/toysfortots-eae4d/private/01/data/01 {

      match /contacts/{contactId} {
        allow list, get: if request.auth.token.firebase.sign_in_provider == 'google.com';
        allow write: if false;
      }

      match /metadata/config {
         allow read, write: if false;
      }

      match /authorizedVolunteers/{userId} {
        allow read, write: if false;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}