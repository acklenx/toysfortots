rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- HELPER FUNCTION (Unchanged) ---
    function isAuthorizedVolunteer() {
      return request.auth.token.firebase.sign_in_provider == 'google.com'
             && exists(/databases/$(database)/documents/artifacts/toysfortots-eae4d/private/aCckkx6FbV1oKOhffIfD/data/V8dC2I8Lte56NJU2GyyY/authorizedVolunteers/$(request.auth.uid));
    }

    // --- Public Data ---
    match /artifacts/toysfortots-eae4d/public/3USFkKsJe7T8ZYdW5YfE/data/EF1QWEKWPMuoLN7fC4Ri {

      // --- THIS IS THE FIX ---
      // Allow ANY authenticated user (including anonymous) to 'get' OR 'list'
      match /locations/{boxId} {
        allow get, list: if request.auth != null; // <--- ADDED "list" HERE
        allow create, update, delete: if false;
      }

      // --- TOTSREPORTS RULE (Unchanged) ---
      match /totsReports/{reportId} {
        allow create: if request.auth != null;
        allow list, get, update: if isAuthorizedVolunteer();
        allow delete: if false;
      }
    }

    // --- Private Data (Unchanged) ---
    match /artifacts/toysfortots-eae4d/private/aCckkx6FbV1oKOhffIfD/data/V8dC2I8Lte56NJU2GyyY {

      match /contacts/{contactId} {
        allow list, get: if request.auth.token.firebase.sign_in_provider == 'google.com';
        allow write: if false;
      }

      match /metadata/config {
         allow read, write: if false;
      }

      match /authorizedVolunteers/{userId} {
        allow read, write: if false;
      }
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}