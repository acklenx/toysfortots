{
  "name": "netlify-tots-functions",
  "version": "1.0.0",
  "description": "Dependencies for Firebase and Mailgun integration.",
  "type": "module",
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "dotenv": "^16.0.0",
    "form-data": "^4.0.0",
    "mailgun.js": "^9.4.0",
    "node-fetch": "^2.6.1"
  },
  "main": "tailwind.config.js",
  "scripts": {
    "test": "playwright test",
    "test:smart": "./run-tests-smart.sh",
    "test:smoke": "./run-smoke-tests.sh",
    "test:production": "playwright test --config=playwright.production.config.cjs",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report playwright-report",
    "test:login": "playwright test tests/e2e/login.spec.js",
    "test:dashboard": "playwright test tests/e2e/dashboard.spec.js",
    "test:setup": "playwright test tests/e2e/setup.spec.js",
    "test:box": "playwright test tests/e2e/box-and-status.spec.js",
    "test:home": "playwright test tests/e2e/home.spec.js",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:unit:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:unit:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:all": "npm run test:unit && npm test",
    "check-setup": "./check-test-setup.sh",
    "perf:audit": "node scripts/web-performance-agent-v2.cjs",
    "perf:audit:mobile": "node scripts/web-performance-agent-v2.cjs --mobile",
    "perf:audit:strict": "node scripts/web-performance-agent-v2.cjs --strict",
    "perf:baseline": "node scripts/web-performance-agent-v2.cjs --baseline",
    "perf:compare": "node scripts/web-performance-agent-v2.cjs --compare",
    "perf:page": "node scripts/web-performance-agent-v2.cjs --page",
    "perf:audit:v1": "node scripts/web-performance-agent.cjs",
    "visual:audit": "node scripts/visual-audit.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx csso public/css/style.css --output public/css/style.min.css",
    "build:js": "npm run build:js:loader && npm run build:js:hamburger && npm run build:js:user && npm run build:js:utils && npm run build:js:autocomplete",
    "build:js:loader": "npx terser public/js/loader.js --compress --mangle --output public/js/loader.min.js",
    "build:js:hamburger": "npx terser public/js/hamburger-menu.js --compress --mangle --output public/js/hamburger-menu.min.js",
    "build:js:user": "npx terser public/js/user-display.js --compress --mangle --output public/js/user-display.min.js",
    "build:js:utils": "npx terser public/js/utils.js --compress --mangle --output public/js/utils.min.js",
    "build:js:autocomplete": "npx terser public/js/location-autocomplete.js --compress --mangle --output public/js/location-autocomplete.min.js",
    "watch:css": "npx csso public/css/style.css --output public/css/style.min.css --watch",
    "watch:js": "npx terser public/js/**/*.js --compress --mangle --output public/js/ --watch",
    "build:prod": "npm run build && ./scripts/use-minified.sh && ./scripts/inline-scripts.sh",
    "build:dev": "./scripts/inline-scripts.sh --undo && ./scripts/use-minified.sh --dev",
    "inline": "./scripts/inline-scripts.sh",
    "inline:undo": "./scripts/inline-scripts.sh --undo"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "chrome-launcher": "^1.2.1",
    "csso-cli": "^4.0.2",
    "firebase-admin": "^13.6.0",
    "firebase-tools": "^14.24.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.1.0",
    "lighthouse": "^13.0.1",
    "playwright-lighthouse": "^4.0.0",
    "terser": "^5.44.1"
  },
  "overrides": {
    "superstatic": "10.0.0",
    "glob": "^11.0.0"
  }
}
